// Program to accept input of a matrix be it 2*2 or 3*3 and then displays it.

#include<iostream>
using namespace std;

int main()
{
	int a, b, c, d, e, f, g, h, i,mattype;
	cout<<" Enter type of Matrix by typing the associated number\n" <<" 1 for 2*2 Matrix\n" <<"2 for 3*3 Matrix\n";
	cin>>mattype;
	
	if(mattype==1)
	{
		cout<<"You are working with a 2*2 Matrix\n";
		cout<<"Enter values for the Matrix, from a to d, Press Enter after each value\n";
		cin>>a >>b >>c >>d;
		cout<<"MatA = \n" <<"\t|"<<a <<" \t" <<b <<"|\n" <<"\t|" <<c <<" \t" <<d <<"\t|\n";
	}
	
	else if(mattype==2)
	{
		cout<<"You are working with a 3*3 Matrix\n";
		cout<<"Enter values for the Matrix, from a to i, Press Enter after each value\n";
		cin>>a >>b >>c >>d >>e >>f >>g >>h >>i;
		cout<<"MatA = \n" <<"|"<<a <<" \t" <<b <<" \t" <<c <<"\t|\n" <<"|" <<d <<" \t" <<e <<" \t" <<f <<"\t|\n" <<"|" <<g <<" \t" <<h <<" \t" <<i <<"\t|\n"; 
	}
	return 0;
}
